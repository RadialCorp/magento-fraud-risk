			<Backordered>PENDING</Backordered>
			<Returned>RETURNED</Returned>
			<Refunded>RETURNED</Refunded>
			<Canceled>CANCELLED</Canceled>
			<Partial>PENDING</Partial>
			<Mixed>PENDING</Mixed>
		</item_status_codes_to_fraud>
		<ship_vendor_to_fraud>
			<fedex>FEDEX</fedex>
			<ups>UPS</ups>
			<usps>USPS</usps>
			<dhlint>DHL</dhlint>
			<dhl>DHL</dhl>
		</ship_vendor_to_fraud>
            </risk_service>
        </radial_eb2cfraud>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Radial_Eb2cFraud/>
            </modules>
        </suite>
    </phpunit>
     <admin>
        <routers>
            <eb2cfraud>
                <use>admin</use>
                <args>
                    <frontName>eb2cfraud</frontName>
                    <module>Radial_Eb2cFraud_Adminhtml</module>
                </args>
            </eb2cfraud>
        </routers>
    </admin>
</config>

