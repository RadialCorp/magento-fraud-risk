                    <pbridge_worldpay_direct>radial_eb2cfraud/payment_adapter_pbridge</pbridge_worldpay_direct>
                    <pbridge_cybersource_soap>radial_eb2cfraud/payment_adapter_pbridge</pbridge_cybersource_soap>
                    <pbridge_dibs>radial_eb2cfraud/payment_adapter_pbridge</pbridge_dibs>
