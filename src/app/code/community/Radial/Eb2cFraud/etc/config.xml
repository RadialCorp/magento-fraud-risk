                    <pbridge_payone_gate>radial_eb2cfraud/payment_adapter_pbridge</pbridge_payone_gate>
                    <pbridge_paybox_direct>radial_eb2cfraud/payment_adapter_pbridge</pbridge_paybox_direct>
                    <pbridge_psigate_basic>radial_eb2cfraud/payment_adapter_pbridge</pbridge_psigate_basic>
                    <pbridge_payone_debit>radial_eb2cfraud/payment_adapter_pbridge</pbridge_payone_debit>
                    <ogone>radial_eb2cfraud/payment_adapter_default</ogone>
                    <purchaseorder>radial_eb2cfraud/payment_adapter_purchase_order</purchaseorder>
                </payment_adapter_map>
		<response_codes>
			<Accept>risk_accept</Accept>
			<Manual_Accept>risk_accept</Manual_Accept>
			<Cancel>risk_cancel</Cancel>
			<Reject>risk_cancel</Reject>
			<Ignore>risk_ignore</Ignore>
			<Suspend>risk_suspend</Suspend>
			<Reject_Pending>risk_rejectpending</Reject_Pending>
		</response_codes>
		<response_codes_states>
			<Accept>processing</Accept>
			<Manual_Accept>processing</Manual_Accept>
			<Cancel>canceled</Cancel>
			<Reject>canceled</Reject>
			<Ignore>processing</Ignore>
			<Suspend>processing</Suspend>
			<Reject_Pending>processing</Reject_Pending>
		</response_codes_states>
		<order_status_codes_to_fraud>
			<new>IN_PROCESS</new>
			<pending>IN_PROCESS</pending>
			<pending_payment>IN_PROCESS</pending_payment>
			<processing>IN_PROCESS</processing>
