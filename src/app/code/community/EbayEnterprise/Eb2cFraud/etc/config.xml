<config>
    <modules>
        <EbayEnterprise_Eb2cFraud>
            <version>0.9.0</version>
        </EbayEnterprise_Eb2cFraud>
    </modules>
    <global>
        <models>
            <eb2cfraud>
                <class>EbayEnterprise_Eb2cFraud_Model</class>
            </eb2cfraud>
        </models>
        <fieldsets>
            <sales_convert_quote>
                <eb2c_fraud_javascript_data>
                    <to_order>*</to_order>
                </eb2c_fraud_javascript_data>
                <eb2c_fraud_host_name>
                    <to_order>*</to_order>
                </eb2c_fraud_host_name>
                <eb2c_fraud_ip_address>
                    <to_order>*</to_order>
                </eb2c_fraud_ip_address>
                <eb2c_fraud_session_id>
                    <to_order>*</to_order>
                </eb2c_fraud_session_id>
                <eb2c_fraud_user_agent>
                    <to_order>*</to_order>
                </eb2c_fraud_user_agent>
                <eb2c_fraud_referrer>
                    <to_order>*</to_order>
                </eb2c_fraud_referrer>
                <eb2c_fraud_content_types>
                    <to_order>*</to_order>
                </eb2c_fraud_content_types>
                <eb2c_fraud_encoding>
                    <to_order>*</to_order>
                </eb2c_fraud_encoding>
                <eb2c_fraud_language>
                    <to_order>*</to_order>
                </eb2c_fraud_language>
                <eb2c_fraud_char_set>
                    <to_order>*</to_order>
                </eb2c_fraud_char_set>
            </sales_convert_quote>
        </fieldsets>
        <resources>
            <eb2cfraud_setup>
                <setup>
                    <module>EbayEnterprise_Eb2cFraud</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
            </eb2cfraud_setup>
        </resources>
        <helpers>
            <eb2cfraud>
                <class>EbayEnterprise_Eb2cFraud_Helper</class>
            </eb2cfraud>
        </helpers>
        <blocks>
            <eb2cfraud>
                <class>EbayEnterprise_Eb2cFraud_Block</class>
            </eb2cfraud>
        </blocks>
        <events>
        	<sales_model_service_quote_submit_after>
			<observers>
				<handle_order_risk_fraud>
					<class>eb2cfraud/observer</class>
					<method>handleSalesModelServiceQuoteSubmitAfter</method>
					<type>singleton</type>
				</handle_order_risk_fraud>
			</observers>
		</sales_model_service_quote_submit_after>
		<checkout_submit_all_after>
			<observers>
				<handle_multi_shipping_orders_risk_fraud>
					<class>eb2cfraud/observer</class>
					<method>handleCheckoutSubmitAllAfter</method>
					<type>singleton</type>
				</handle_multi_shipping_orders_risk_fraud>
			</observers>
		</checkout_submit_all_after>
		<sales_order_save_after>
			<observers>
				<handle_order_final_action_risk_feedback>
					<class>eb2cfraud/observer</class>
					<method>handleSalesOrderSaveAfter</method>
					<type>singleton</type>
				</handle_order_final_action_risk_feedback>
			</observers>
		</sales_order_save_after>
	</events>
    </global>
    <frontend>
        <layout>
            <updates>
                <eb2cfraud>
                    <file>eb2cfraud.xml</file>
                </eb2cfraud>
            </updates>
        </layout>
    </frontend>
    <phpunit>
        <suite>
            <modules>
                <EbayEnterprise_Eb2cFraud/>
            </modules>
        </suite>
    </phpunit>
</config>
